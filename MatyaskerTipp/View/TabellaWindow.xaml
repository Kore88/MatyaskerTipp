<Window x:Class="MatyaskerTipp.View.TabellaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatyaskerTipp.View"
        mc:Ignorable="d"
        Title="TabellaWindow" Height="450" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="lbTabella"
               Grid.ColumnSpan="2"
               Content="Tabella"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"></Label>

        <ComboBox x:Name="cbxTabella"
                  Grid.Row="0"
                  Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="0,50,0,0"
                  Width="100"
                  SelectionChanged="cbxTabella_SelectionChanged"
                  ></ComboBox>

        <DataGrid x:Name="dgTabella"
          Grid.Row="1"
          Grid.ColumnSpan="2"
          AutoGenerateColumns="False"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Width="255"
          Height="300"
          Margin="0,20,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Felhasználónév" Binding="{Binding UserName}" Width="100" />
                <DataGridTextColumn Header="Játékos neve" Binding="{Binding RealName}" Width="100" />
                <DataGridTextColumn Header="Pontok" Binding="{Binding Points}" Width="50" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
